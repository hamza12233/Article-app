<h2 class="text-center font-weight-bold">Create new category</h2>
<%=render 'shared/errors', obj:@category %>

<div class="row">
  <div class="col-12">


    <%= form_for @category do |f| %>

      <div class="form-group">
        <%=f.label :name%>
        <%=f.text_field :name, class:"form-control",placeholder:"Add category"%>
      </div>

      <p>
        <%=f.submit class:"btn btn-primary" %>
      </p>


    <% end %>
  </div>
</div>
